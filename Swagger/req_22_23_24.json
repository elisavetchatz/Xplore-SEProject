{
  "paths": {
    "/user/{id}/role/{role}/story/{story-id}/riddle": {
      "post": {
        "description": "FR22: The gamemaster must be able to create a custom riddle",
        "operationId": "create_custom_riddle",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "role",
            "in": "path",
            "description": "User role (gamemaster, solver)",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["gamemaster", "solver"]
            }
          },
          {
            "name": "story-id",
            "in": "path",
            "description": "Story ID to which the riddle belongs",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "Riddle object that is created",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Riddle"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Riddle created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Riddle"
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },

    "/user/{id}/role/{role}/answer/{answer-id}": {
      "get": {
        "description": "FR23: The gamemaster must be able to view the invited solvers' answers",
        "operationId": "getAnswerText",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "role",
            "in": "path",
            "description": "User role (gamemaster, solver)",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["gamemaster", "solver"]
            }
          },
          {
            "name": "answer-id",
            "in": "path",
            "description": "ID of the answer to retrieve",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Answer found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Answer"
                }
              }
            }
          },
          "404": {
            "description": "Answer not found"
          }
        }
      }
    },
    "/user/{id}/role/{role}/answer": {
      "get": {
        "description": "FR23: The gamemaster must be able to view the invited solvers' answers",
        "operationId": "getAnswerText",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "role",
            "in": "path",
            "description": "User role (gamemaster, solver)",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["gamemaster", "solver"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of answers",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Answer"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No answers found"
          }
        }
      }
    },
    "/user/{id}/role/{role}/riddle": {
      "get": {
        "description": "FR24: The gamemaster must be able to request riddles from the Database",
        "operationId": "request_riddles_from_database",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "role",
            "in": "path",
            "description": "User role (gamemaster, solver)",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["gamemaster", "solver"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of riddles retrieved from the database",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Riddle"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No riddles found"
          }
        }
      }
    }
  }
}